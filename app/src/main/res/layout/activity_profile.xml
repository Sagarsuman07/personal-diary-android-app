<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".profile">


    <LinearLayout
        android:layout_width="131dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/backspace" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Calender"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="82dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/userbtn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Pin"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="158dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="101dp"
        app:cardCornerRadius="21dp"
        app:cardBackgroundColor="@color/grey"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="184dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Hey ! How are you feeling today"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="66dp"
            android:background="@color/grey"
            android:layout_height="59dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/laugh_foreground" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="66dp"
            android:layout_height="59dp"
            android:background="@color/grey"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/relaxed_foreground" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="66dp"
            android:layout_height="59dp"
            android:background="@color/grey"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/worried_foreground" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="66dp"
            android:layout_height="59dp"
            android:background="@color/grey"
            android:layout_marginLeft="209dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/sad_foreground" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="66dp"
            android:layout_height="59dp"
            android:background="@color/grey"
            android:layout_marginLeft="267dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/angry_foreground" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="How many hours did you sleep today"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="313dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="365dp"
        android:layout_height="174dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="21dp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="333dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="54dp"
            android:layout_height="28dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="146dp"
            android:layout_marginBottom="240dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="save"

            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="64dp"
            android:layout_height="23dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="146dp"
            android:background="@drawable/numberinput_round"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="130dp"
            android:text="Update"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="15dp"
            android:text="07"
            android:textSize="100sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="162dp"
            android:layout_height="153dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/sleep" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Average sleep hour"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="365dp"
        android:layout_height="136dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="21dp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="561dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="133dp"
            android:layout_marginTop="10dp"
            android:text="07"
            android:textSize="85sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Average mood"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="724dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="368dp"
        android:layout_height="142dp"
        app:cardCornerRadius="21dp"
        app:cardBackgroundColor="@color/grey"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="744dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="136dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/relaxed_foreground" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="22dp" />

</androidx.constraintlayout.widget.ConstraintLayout>